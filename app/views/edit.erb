<h1>Grandma wants to change something</h1>
<form action="/recipes/<%= @recipe.id %>" method="post">
  <input type="hidden" name="_method" value="PATCH">
  <label for="name">Name: </label>
  <input type="text" name="recipe[name]" id="name"><br>

  <label for="ingredients">Ingredients: </label>
  <input type="text" name="recipe[ingredients]" value="<%= @recipe.ingredients %>" id="ingredients"><br>

  <label for="cook_time">Cook Time: </label>
  <input type="text" name="recipe[cook_time]" id="cook_time">
  <button type="submit" name="submit">Submit</button>
</form>
